      POSTGRES_DB: ${POSTGRES_DB:-procureflow_db}
    volumes:
      - pgdata:/var/lib/postgresql/data
    networks:
      - postgres-internal
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U $$POSTGRES_USER"]
      interval: 10s
      timeout: 5s
      retries: 5

