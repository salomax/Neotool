meta {
  name: Create Group
  type: graphql
  seq: 15
}

post {
  url: http://{{router}}/graphql
  body: graphql
  auth: bearer
}

auth:bearer {
  token: {{jwt_token}}
}

body:graphql {
  mutation CreateGroup($input: CreateGroupInput!) {
    createGroup(input: $input) {
      id
      name
      description
      createdAt
    }
  }
}

body:graphql:vars {
  {
    "input": {
      "name": "New Group",
      "description": "Description of the new group"
    }
  }
}
