meta {
  name: Get Group
  type: graphql
  seq: 17
}

post {
  url: http://{{router}}/graphql
  body: graphql
  auth: bearer
}

auth:bearer {
  token: {{jwt_token}}
}

body:graphql {
  query GetGroup($id: ID!) {
    group(id: $id) {
      id
      name
      description
      createdAt
      updatedAt
      roles {
        id
        name
      }
      members {
        id
        displayName
      }
    }
  }
}

body:graphql:vars {
  {
    "id": "{{groupId}}"
  }
}
